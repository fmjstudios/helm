                        },
                        "attachmentDailyBandwidthLimit": {
                            "type": "string",
                            "description": "The total daily attachment download/upload traffic limit per visitor",
                            "default": "500M"
                        },
                        "subscriberRateLimiting": {
                            "type": "boolean",
                            "description": "Whether to enable subscriber-based rate limiting",
                            "default": "false"
                        }
                    }
                },
                "stripe": {
                    "type": "object",
                    "properties": {
                        "secretKey": {
                            "type": "string",
