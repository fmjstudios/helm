                            "default": "\"\""
                        },
                        "emailAddress": {
                            "type": "string",
                            "description": "is the admin email address send to the push provider, (e.g. \"sysadmin@example.com\")",
                            "default": "\"\""
                        },
                        "startupQueries": {
                            "type": "string",
                            "description": "SQLite queries to run on database initialization (e.g. to enable WAL mode)",
                            "default": "\"\""
                        }
                    }
                },
